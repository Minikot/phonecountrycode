<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMenuBg"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:textColor="@color/colorTextLogin"
        android:background="@color/colorBgTextLogin"
        android:textSize="24sp"
        android:text="@string/log_in"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/layout_shadow"
        />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBtnNext"
            android:textSize="34sp"
            android:text="@string/hello_driver"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorMessage"
            android:text="@string/message_for_the_driver"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:textSize="14sp"
            android:textColor="@color/colorTextPhone"
            android:text="@string/phone"
            />

        <LinearLayout
            android:id="@+id/ll_country_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_country_flag_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_code_phone_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryWhite"
                android:text="+1"
                />

            <ImageButton
                android:id="@+id/ib_country_selection"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="4dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:src="@drawable/ic_btn_arrow_down_white"/>


            <EditText
                android:id="@+id/et_code_phone_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="phone"
                android:paddingStart="6dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="18sp"
                android:background="@drawable/edit_text_border"
                android:textColor="@color/colorPrimaryWhite"
                android:hint="XXX XX XX"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_df_select_country"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:textSize="20sp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:background="@color/colorBtnNext"
        android:text="@string/btn_enter_app" />

</LinearLayout>